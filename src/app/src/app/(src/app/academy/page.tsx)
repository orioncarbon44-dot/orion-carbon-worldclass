// Helper Components for clean code (Optimization)
interface CardProps { title: string; description: string; color?: string; }
const ValuePropCard: React.FC<CardProps> = ({ title, description, color }) => (
    <div className={`p-5 bg-gray-50 rounded-lg shadow-md ${color}`}>
