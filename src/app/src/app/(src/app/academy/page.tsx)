        <p className="text-3xl font-extrabold text-[#191970] mb-4">{price}</p>
        <Link href={link} className={`block w-full py-3 font-bold text-white rounded-lg transition duration-300 ${ctaColor} hover:opacity-90`}>
            {ctaText}
        </Link>
    </div>
);

export default AcademyPage;
