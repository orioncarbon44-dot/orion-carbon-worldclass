interface CourseCardProps extends CardProps { price: string; ctaText: string; link: string; ctaColor: string;}
const CourseCard: React.FC<CourseCardProps> = ({ title, description, price, ctaText, link, ctaColor }) => (
    <div className="p-6 bg-white rounded-xl shadow-xl border-t-4 border-[#008080]">
